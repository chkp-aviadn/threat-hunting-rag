# Development Environment Configuration
# Use this file for local development

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=logs/development.log
VERBOSE_LOGGING=true
DEBUG=true

# Enable Audit Logging for Security Testing
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_PATH=logs/security_audit.log

# Model & Data Paths
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
MODEL_CACHE_DIR=src/infrastructure/cache/models/
VECTOR_DB_PATH=data/chroma
EMAIL_DATASET_PATH=data/emails.csv

# Performance Settings (Development)
PHISHING_THRESHOLD=0.7
MAX_RESULTS=10
BATCH_SIZE=16
CACHE_TTL_SECONDS=1800

# API Configuration (Development)
API_HOST=localhost
API_PORT=8000
API_WORKERS=1
ENABLE_API_AUTH=false
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Cache Settings (Development)
ENABLE_QUERY_CACHE=true
ENABLE_EMBEDDING_CACHE=true
MAX_CACHE_SIZE=500

# Development Features
VERBOSE_LOGGING=true
CLI_RATE_LIMIT_PER_MINUTE=120
REQUIRE_ADMIN_CONFIRMATION=false
ENABLE_INPUT_SANITIZATION=true
MAX_QUERY_LENGTH=1000
